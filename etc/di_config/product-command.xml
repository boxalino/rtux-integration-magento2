<?xml version="1.0"?>
<!--
/**
 * Boxalino Data Integration Product Data Sync CLI Command
 * (global preferences)
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Boxalino\DataIntegrationDoc\Service\Integration\ProductIntegrationHandlerInterface" type="Boxalino\DataIntegration\Service\Integration\Product\FullIntegrationHandler"/>
    <type name="Boxalino\DataIntegrationDoc\Service\Integration\ProductIntegrationHandlerInterface">
        <arguments>
            <argument name="docHandlers" xsi:type="array">
                <item name="doc_language" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocLanguagesHandlerInterface</item>
                <item name="doc_attribute_value" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocAttributeValuesHandlerInterface</item>
                <item name="doc_attribute" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocAttributeHandlerInterface</item>
                <item name="doc_product" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocProductHandlerInterface</item>
            </argument>
            <argument name="timeout" xsi:type="number">3600</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="boxalino:di:full:product" xsi:type="object">Boxalino\DataIntegrationDoc\Framework\Console\Product\FullDataIntegration</item>
                <!--                <item name="boxalino:di:full:delta" xsi:type="object">Boxalino\DataIntegrationDoc\Framework\Console\Product\DeltaDataIntegration</item>-->
                <!--                <item name="boxalino:di:full:instant" xsi:type="object">Boxalino\DataIntegrationDoc\Framework\Console\Product\InstantDataIntegration</item>-->
            </argument>
        </arguments>
    </type>
</config>
