<?xml version="1.0"?>
<!--
/**
 * Boxalino Data Integration Product DELTA SYNC
 * (global preferences)
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- PRODUCT DELTA INTEGRATION -->
    <preference for="Boxalino\DataIntegrationDoc\Service\Integration\ProductDeltaIntegrationHandlerInterface" type="Boxalino\DataIntegration\Service\Integration\Product\DeltaIntegrationHandler"/>
    <type name="Boxalino\DataIntegrationDoc\Service\Integration\ProductDeltaIntegrationHandlerInterface">
        <arguments>
            <argument name="docHandlers" xsi:type="array">
                <item name="doc_language" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocLanguagesHandlerInterface</item>
                <item name="doc_attribute_value" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocAttributeValuesHandlerInterface</item>
                <item name="doc_attribute" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocAttributeHandlerInterface</item>
                <item name="doc_product" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocProductHandlerInterface</item>
            </argument>
            <argument name="logger" xsi:type="object">Boxalino\DataIntegration\Logger\Delta\Logger</argument>
            <argument name="timeout" xsi:type="number">300</argument>
            <argument name="fullConversionThreshold" xsi:type="number">12000</argument>
        </arguments>
    </type>

</config>
