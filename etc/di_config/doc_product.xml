    <type name="Boxalino\DataIntegration\Service\Document\Product\Attribute\IntegrationPropertyHandlerAbstract">
        <arguments>
            <argument name="logger" xsi:type="object">Boxalino\DataIntegration\Logger\Logger</argument>
