<?xml version="1.0"?>
<!--
/**
 * Boxalino Data Integration Order Data Sync CLI Command
 * (global preferences)
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- ORDER INTEGRATION -->
    <preference for="Boxalino\DataIntegrationDoc\Service\Integration\OrderIntegrationHandlerInterface" type="Boxalino\DataIntegration\Service\Integration\Order\FullIntegrationHandler"/>
    <type name="Boxalino\DataIntegrationDoc\Service\Integration\OrderIntegrationHandlerInterface">
        <arguments>
            <argument name="docHandlers" xsi:type="array">
                <item name="doc_order" xsi:type="object">Boxalino\DataIntegrationDoc\Service\Integration\Doc\DocOrderHandlerInterface</item>
            </argument>
            <argument name="timeout" xsi:type="number">3600</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="boxalino:di:full:order" xsi:type="object">Boxalino\DataIntegrationDoc\Framework\Console\Order\FullDataIntegration</item>
            </argument>
        </arguments>
    </type>

</config>
