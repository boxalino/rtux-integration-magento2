<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="boxalino-narrative-dynamic"/>

        <!-- Main Content: top section, main section -->
        <referenceContainer name="content">
            <block class="Boxalino\RealTimeUserExperience\Block\Layout\Top" name="rtux.api.top" before="-"/>
            <block class="BoxalinoClientProject\BoxalinoIntegration\Block\Api\Dynamic" name="rtux.api.dynamic"
                   template="Boxalino_RealTimeUserExperience::api/block.phtml">
                <arguments>
                    <argument name="widget" xsi:type="string">campaign</argument>
                    <argument name="hitCount" xsi:type="string">10</argument>
                    <argument name="groupBy" xsi:type="string">products_group_id</argument>
                    <argument name="returnFields" xsi:type="array">
                        <item name="id" xsi:type="string">id</item>
                        <!-- required as it is the group_by -->
                        <item name="group_id" xsi:type="string">products_group_id</item>
                        <item name="price" xsi:type="string">discountedPrice</item>
                        <item name="title" xsi:type="string">title</item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Sidebar Content : facets -->
        <referenceContainer name="sidebar.main">
            <block class="Boxalino\RealTimeUserExperience\Block\Layout\Left" name="rtux.api.left" before="-"/>
        </referenceContainer>
    </body>
</page>
