<?xml version="1.0"?>
<!--
/**
* Required in order to display the Layout Blocks with the property "position":"top"
* The Layout Block elements with the property "position":"left" are displayed as part of the Layered Navigation
* (which is redefined in etc/frontend/di.xml)
*/
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- displaying the elements with the position:top -->
        <referenceContainer name="content">
            <block class="Boxalino\RealTimeUserExperience\Block\Layout\Top" name="rtux.api.top" before="-"/>
        </referenceContainer>
    </body>
</page>
